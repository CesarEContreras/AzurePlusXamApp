<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AzurePlusXamApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="formLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value = "Small"/>
                <Setter Property="FontAttributes" Value = "Bold"/>
                <Setter Property="TextColor" Value = "Navy"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>